<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="24dp"
    android:paddingVertical="32dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/button_back"
        android:src="@drawable/ic_chevron_left" />

    <ImageView
        android:id="@+id/iv_edit_profile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/button_back"
        android:src="@drawable/ic_edit_pencil" />

    <TextView
        android:id="@+id/tv_my_profile"
        style="@style/text_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/my_profile" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tv_my_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/img_profile_placeholder"
        app:shapeAppearance="@style/circleImageView" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/text_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/dummy_name" />

    <TextView
        android:id="@+id/tv_email"
        style="@style/text_sub_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:text="@string/dummy_email" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        style="@style/button_secondary"
        android:layout_above="@id/tv_app_version"
        android:layout_marginBottom="16dp"
        android:text="@string/log_out"
        android:textAllCaps="false"
        android:textColor="@color/danger"
        app:strokeColor="@color/danger"
        app:rippleColor="@color/danger_ripple"/>

    <TextView
        android:id="@+id/tv_app_version"
        style="@style/text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_version" />
</RelativeLayout>