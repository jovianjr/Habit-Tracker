<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HabitTracker" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="text_app_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="text_app_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_semibold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="button_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">4pt</item>
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">4pt</item>
        <item name="android:background">@drawable/rounded_button_secondary</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>